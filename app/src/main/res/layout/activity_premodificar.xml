<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:inputType="phone"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/modificar_input"
        android:layout_marginTop="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:id="@+id/modificar_clicked"
        android:layout_below="@+id/modificar_input"
        android:layout_centerHorizontal="true"
        android:onClick="modificar_clicked"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Introduzca el codigo de la persona y oprima modificar"
        android:id="@+id/titulo_txt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.06" />

</LinearLayout>